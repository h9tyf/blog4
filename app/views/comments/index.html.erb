<p id="notice"><%= notice %></p>

<%= my_error_exp if defined? (my_error_exp) %>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Blog</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.blog_id %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(comment.blog_id, comment) %></td>
        <td><%= link_to 'Destory', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', blogs_path %>
